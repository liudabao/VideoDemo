<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame_edit">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_gray_300">
    <RelativeLayout
        android:id="@+id/edit_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_retangle"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/text_set_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18"
            android:text="批量删除" />
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_back_selector"
            android:layout_marginLeft="16dp"/>

    </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/edit_bottom"
            android:layout_below="@+id/edit_top">
        </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/edit_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_bottmo_retangle"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:id="@+id/btn_select"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/unselect"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            />
        <TextView
            android:id="@+id/text_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_gray_500"
            android:textSize="@dimen/text_size_14"
            android:layout_toRightOf="@+id/btn_select"
            android:text="全选"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@+id/text_delete"
            android:layout_centerVertical="true"
            android:background="@drawable/delete_selector"
            android:layout_marginRight="4dp"/>
        <TextView
            android:id="@+id/text_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/skyblue"
            android:textSize="@dimen/text_size_14"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
